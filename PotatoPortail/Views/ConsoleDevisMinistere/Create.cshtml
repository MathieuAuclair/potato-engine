@model ApplicationPlanCadre.Models.DevisMinistere

@{
    ViewBag.Title = "Ajout d'un devis ministériel";
}

@using (Html.BeginForm("Create", "ConsoleDevisMinistere", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Titre</h1>

            </header>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="field-box">
                <div class="row">
                    <div class="col-md-8">

                        @Html.ValidationMessage("Duplique", new { @class = "text-danger" })

                        <div class="element">

                            <p>Création d'un devis</p>
                            <hr/>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.codeProgramme)
                            @Html.DropDownList("codeProgramme", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.codeProgramme, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.annee)
                            @Html.TextBoxFor(m => m.annee, null, new { @class = "form-control small", @maxlength = 4, @onkeydown = "return (!(event.keyCode>=65) && event.keyCode!=32);" })
                            @Html.ValidationMessageFor(m => m.annee, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.codeSpecialisation)
                            @Html.TextBoxFor(m => m.codeSpecialisation, null, new { @class = "form-control small", @maxlength = 2 })
                            @Html.ValidationMessageFor(m => m.codeSpecialisation, "", new { @class = "text-danger" })
                        </div>

                        <div class="element">
                            <input type="submit" value="Ajouter" class="fancy-button" />
                            <a href='@Url.Action("Index")' class="fancy-button rouge">Annuler</a>

                        </div>

                    </div>
                </div>
            </div>
            <hr />
            
        </div>
    </div>

}