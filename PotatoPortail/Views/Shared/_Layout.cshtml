<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Titre</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/material-icons.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", false)

    <script>
        function rechercheLayout() {
            var stringRech = document.getElementById("txtRecherche").value;
            //TODO implement
            //window.location.href = "@*Url.Action("Recherche", "Recherche"*@)?stringRechercher=" + stringRech;
        }

        $(document).bind('keydown',
            function(e) {
                if (e.which === 13) {
                    $('#rechercheLayout').trigger('click');
                }
            });
    </script>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Gestion de stage", "Index", "Stage", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Stages", "Index", "Stage")</li>
                <li>@Html.ActionLink("Entreprises", "Index", "Entreprise")</li>
                <li>@Html.ActionLink("Étudiant", "Index", "Etudiant")</li>
                <li>@Html.ActionLink("Location", "Index", "Location")</li>
                <li>@Html.ActionLink("Statuts", "Index", "Status")</li>
                <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                <li>@Html.ActionLink("Appliquer pour un stage", "Index", "Application")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    @Html.Partial("_Toastr")

</section>
</body>
</html>