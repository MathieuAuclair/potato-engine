@model PotatoPortail.Models.Reunions.OrdreDuJour
@{
    ViewBag.Titre = "PDF " + Model.TitreOdJ;
    int NbOrdreDuJour = 1;
    Layout = null;
}

<style>
    .pdf {
        font-family: Calibri;
        width: 100%;
    }

    .enonce-left {
        display: inline;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        width: 50%;
        float: left;
        margin: 0;
    }

    .enonce-right {
        display: inline;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        width: 50%;
        float: right;
        margin: 0;
    }

    .titre {
        font-size: 40px;
        width: 100%;
        border-bottom-style: solid
    }

    .soustitre {
        font-size: 30px;
    }

</style>
<!DOCTYPE html>

<html>
<head>

</head>
<body>
<div class="pdf">

    <div class="entete">
        <p class="titre">
            @Html.DisplayFor(x => Model.TitreOdJ)
        </p>
        <br/>
        <br/>
        <div class="soustitre">
            Heure du début de la réunion :
            <br/>
            @Html.DisplayFor(x => Model.HeureDebutReunion)
            <br/>
        </div>
        <div class="soustitre">
            Heure de fin de la réunion :
            <br/>
            @Html.DisplayFor(x => Model.HeureFinReunion)
            <br/>
        </div>
        <div class="soustitre">
            Date de la réunion :
            <br/>
            @Html.DisplayFor(x => Model.DateOdJ)
            <br/>
        </div>
        <div class="soustitre">
            Lieu de la réunion :
            <br/>
            @Html.DisplayFor(x => Model.LieuReunionODJ)
            <br/>
            <div class="titre">
                Ordre du jour
                <br/>
                @foreach (var pointPrincipal in Model.SujetPointPrincipal)
                {
                    <br/>
                    <div class="soustitre">
                        
                        @Html.Raw(NbOrdreDuJour).@Html.DisplayFor(x => pointPrincipal.SujetPoint)
                        <br/>
                        @foreach (var souspoints in pointPrincipal.SousPointSujet)
                        {
                            <div class="soustitre">
                                <ul style="list-style-type:disc">
                                    <li>@Html.DisplayFor(x => souspoints.SujetSousPoint)</li>
                                </ul>  
                                <br/>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</body>
</html>