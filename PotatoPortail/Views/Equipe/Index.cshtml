@model IEnumerable<ApplicationPlanCadre.Models.eSports.Equipe>

@{
    ViewBag.Titre = "Équipes";
}

<div class="container" style="margin-bottom:5%;">
    <div class="box">

        <header class="light-header">
            <h1>Liste des équipes</h1>
        </header>

        @using (Html.BeginForm())
        {
        <div class="col-md-4">
            @Html.DropDownList("searchIDJeu", (IEnumerable<SelectListItem>)ViewBag.Jeux, new { @class = "form-control" })
            <br />
            <input type="submit" value="Filtrer" class="fancy-button" onclick="location.href= '@Url.Action("Index", "Equipe")'" />
            <br/><br/>
        </div>
        }

        <table class="cool-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nomEquipe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JeuId)
                </th>
                <th class="action-cell-header">
                    <b>Modifier</b>
                </th>
                <th class="action-cell-header">
                    <b>Détails</b>
                </th>
                <th class="action-cell-header">
                    <b>Supprimer</b>
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomEquipe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jeu.nomJeu)
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Modifier","Equipe", new { id = item.id, nomEquipe = item.nomEquipe, nomJeu = item.Jeu.nomJeu })'>
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Details","Equipe", new { id = item.id, nomEquipe = item.nomEquipe, nomJeu = item.Jeu.nomJeu })'>
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Supprimer","Equipe", new { id = item.id, nomEquipe = item.nomEquipe, nomJeu = item.Jeu.nomJeu })'>
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
            }
        </table>

        <div class="menu-flottant">
            <a class="fancy-button blanc" href="/Accueil/ESport">
                <span class="glyphicon glyphicon-triangle-left"></span>
                Retour
            </a>
            <a class="fancy-button blanc" href="@Url.Action("Creation", "Equipe")">
                <span class="glyphicon glyphicon-plus"></span>
                Ajouter une équipe
            </a>
        </div>

    </div>
</div>