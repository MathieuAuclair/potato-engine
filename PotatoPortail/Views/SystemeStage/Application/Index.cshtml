@model IEnumerable<PotatoPortail.Models.Application>
@using PotatoPortail.Views.Shared.Widget.Model

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-bottom:5%;">

    <h2>Applications aux stages</h2>

    <div class="row">
        <div class="col-md-11">
            <table class="cool-table">
                <tr>
                    <th colspan="1">Nom de l'étudiant</th>
                    <th colspan="1">Code permanent</th>
                    <th colspan="5">Description du stage</th>
                    <th class="action-cell-header">Modifier</th>
                    <th class="action-cell-header">Supprimer</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="1">
                            @Html.DisplayFor(modelItem => item.Etudiant.NomComplet)
                        </td>
                        <td colspan="1">
                            @Html.DisplayFor(modelItem => item.Etudiant.CodePermanent)
                        </td>
                        <td colspan="5">
                            <div class="scrollable">
                                @Html.DisplayFor(modelItem => item.Stage.Description)
                            </div>
                        </td>
                        <td colspan="1" class="action-cell">

                            <a href='@Url.Action("Modifier", "Application", new {item.IdApplication })'>
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td colspan="1" class="action-cell">
                            <a href='@Url.Action("Suppression", "Application", new { item.IdApplication })'>
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>

                }
            </table>
        </div>
    </div>
    <div class="menu-flottant">
        <a class="fancy-button blanc" href="/Accueil/Stage">
            <span class="glyphicon glyphicon-triangle-left"></span>
            Retour
        </a>

        <a class="fancy-button blanc" href="@Url.Action("Creation", "Application")">
            <span class="glyphicon glyphicon-plus"></span>
            Appliquer sur un stage
        </a>

    </div>
</div>