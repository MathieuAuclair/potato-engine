@using PotatoPortail.Views.Shared.Widget.Model
@model IEnumerable<PotatoPortail.Models.Etudiant>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-bottom:5%;">
    <h1>Stagiaire</h1>
    
    <div class="row">
        <div class="col-md-13">
            <table class="cool-table">
                <tr>
                    <th colspan="2">Nom</th>
                    <th colspan="2">Courriel personnel</th>
                    <th colspan="2">Courriel scolaire</th>
                    <th colspan="1">Téléphone</th>
                    <th colspan="2">Code permanent</th>
                    <th colspan="1">Numéro DA</th>
                    <th class="action-cell-header">Modifier</th>
                    <th class="action-cell-header">Supprimer</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="2">
                            @Html.DisplayFor(model => item.Prenom) @Html.DisplayFor(model => item.NomDeFamille)
                        </td>
                        <td colspan="2">
                            @Html.DisplayFor(model => item.CourrielPersonnel)
                        </td>
                        <td colspan="2">
                            @Html.DisplayFor(model => item.CourrielEcole)
                        </td>
                        <td colspan="1">
                            @Html.DisplayFor(model => item.Telephone)
                        </td>
                        <td colspan="2">
                            @Html.DisplayFor(model => item.CodePermanent)
                        </td>
                        <td colspan="1">
                            @Html.DisplayFor(model => item.NumeroDa)
                        </td>

                        <td class="action-cell">

                            <a href='@Url.Action("ConsulterDossierEtudiant", "Etudiant", new { item.IdEtudiant })'>
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td class="action-cell">
                            <a href='@Url.Action("Suppression", "Etudiant", new { item.IdEtudiant })'>
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="menu-flottant">
        <a class="fancy-button blanc" href="/Accueil/Stage">
            <span class="glyphicon glyphicon-triangle-left"></span>
            Retour
        </a>

        <a class="fancy-button blanc" href="@Url.Action("Creation", "Etudiant")">
            <span class="glyphicon glyphicon-plus"></span>
            Ajouter un étudiant
        </a>

    </div>
</div>