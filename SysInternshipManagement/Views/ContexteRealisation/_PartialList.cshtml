@model IEnumerable<ApplicationPlanCadre.Models.ContexteRealisation>

<table class="cool-table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.description)
        </th>
        <th class="action-cell-header">
            <b>Modifier</b>
        </th>
        <th class="action-cell-header">
            <b>Supprimer</b>
        </th>
        <th class="action-cell-header">
            <b>Déplacer</b>
        </th>
    </tr>

    @foreach (var item in Model.OrderBy(e => e.numero))
    {
        string dblclickEvent = Url.Action("Modifier", new {idContexte = item.idContexte});
        <tr ondblclick="location.href = '@dblclickEvent'">
            <td>
                @Html.DisplayFor(m => item.description)
            </td>
            <td class="action-cell">
                <a href='@Url.Action("Modifier", new {idContexte = item.idContexte})'>
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </td>
            <td class="action-cell">
                <a href='@Url.Action("Supression", new {idContexte = item.idContexte})'>
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
            <td class="action-cell">
                <a href=''>
                    <span class="glyphicon glyphicon-arrow-up"></span>
                </a>
                <a href=''>
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </a>
            </td>
        </tr>
    }
</table>