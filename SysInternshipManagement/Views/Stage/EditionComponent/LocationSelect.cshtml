@model SysInternshipManagement.Views.Stage.EditionComponent.Models.LocationSelect

<div class="flat-select">
    <p>Location du Stage</p>
    <select name="IdLocation">
        <optgroup label="Value">
            @foreach (var item in Model.Locations)
            {
                <option value="@Html.DisplayFor(modelItem => item.IdLocation)">@Html.DisplayFor(modelItem => item.Nom)</option>
            }
        </optgroup>
    </select>
</div>