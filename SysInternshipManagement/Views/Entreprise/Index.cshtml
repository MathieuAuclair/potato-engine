@model IEnumerable<SysInternshipManagement.Models.Entreprise>
@using SysInternshipManagement.Views.Shared.Widget.Model
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Entreprise</h1>
    
    <div style="margin-top: 15px; margin-bottom: 15px;">
        <form action="/Entreprise/Creation" method="post">
            @Html.Partial("Widget/_FlatUiButton", new FlatUiButton("Ajouter une nouvelle entreprise"))
        </form>
    </div>

    <div class="row">
        <div class="col-md-11">
            <table class="cool-table">
                <tr>
                    <th colspan="2">Entreprise</th>
                    <th colspan="3">Adresse</th>
                    <th colspan="2">Code postal</th>
                    <th colspan="1" class="action-cell-header">Modifier</th>
                    <th colspan="1" class="action-cell-header">Supprimer</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(model => item.Nom)</td>
                    <td>
                        @Html.DisplayFor(model => item.NumeroCivique)
                        @Html.DisplayFor(model => item.Rue)
                        @Html.DisplayFor(model => item.Ville),
                        @Html.DisplayFor(model => item.Province),
                        @Html.DisplayFor(model => item.Pays)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CodePostal)
                    </td>

                    <td colspan="1" class="action-cell">

                        <a href='@Url.Action("Edition", "Entreprise", new { id = item.IdEntreprise })'>
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td colspan="1" class="action-cell">
                        <a href='@Url.Action("Suppression", "Entreprise", new { id = item.IdEntreprise })'>
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                    
                </tr>

                }
            </table>
        </div>
    </div>
</div>