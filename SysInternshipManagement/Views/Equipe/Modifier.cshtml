@model ApplicationPlanCadre.Models.eSports.Equipe

@{
    ViewBag.Titre = "Modification d'équipe";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    @Html.HiddenFor(model => model.id)

    <div class="container">
        <div class="form-box">
            <div class="row">

                <header class="light-header">
                    <h1>Modification de l'équipe «@ViewBag.nomEquipe» (@ViewBag.nomJeu)</h1>
                </header>


                <div class="form-group">
                    <div class="col-md-6">
                        @Html.Label("Nouveau nom")
                        @Html.TextBoxFor(model => model.nomEquipe, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.nomEquipe, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    @Html.HiddenFor(model => model.JeuId)
                    @Html.HiddenFor(model => model.JeuId, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.JeuId, "", new {@class = "text-danger"})
                </div>

            </div>


            <div class="menu-flottant">
                <a class="fancy-button blanc" href='@Url.Action("Index", "Equipe")'>
                    <span class="glyphicon glyphicon-triangle-left"></span>
                    Annuler
                </a>
                <input type="submit" value="Mettre à jour «@ViewBag.nomEquipe»" class="fancy-button blanc"/>
            </div>

        </div>
    </div>
}