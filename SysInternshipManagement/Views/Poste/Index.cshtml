@using SysInternshipManagement.Views.Shared.Widget.Model
@model IEnumerable<SysInternshipManagement.Models.Poste>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Contact</h1>

    <div style="margin-top: 15px; margin-bottom: 15px;">
        <form action="/Poste/Creation" method="post">
            @Html.Partial("Widget/_FlatUiButton", new FlatUiButton("Ajouter un nouveau type de poste"))
        </form>
    </div>
    <div class="row">
        <div class="col-md-10">
            <table class="cool-table">
                <tr>
                    <th colspan="6">Nom du poste</th>
                    <th colspan="1" class="action-cell-header">Modifier</th>
                    <th colspan="1" class="action-cell-header">Supprimer</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Nom)
                        </td>
                        <td colspan="1" class="action-cell">

                            <a href='@Url.Action("Edition", "Poste", new { id = item.IdPoste })'>
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                        <td colspan="1" class="action-cell">
                            <a href='@Url.Action("Suppression", "Poste", new { id = item.IdPoste })'>
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>