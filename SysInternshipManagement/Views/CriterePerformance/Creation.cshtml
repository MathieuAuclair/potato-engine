@model ApplicationPlanCadre.Models.CriterePerformance

@{
    ViewBag.Titre = "Gérer les critères de performance";
}

@using (Html.BeginForm("Creation", "CriterePerformance"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.idElement)

    <div class="container">
        <div class="form-box">
            
            <header class="light-header">

                <h3>@Html.DisplayFor(m => m.ElementCompetence.description)</h3>

                <h1>@ViewBag.Titre</h1>

            </header>

            <div class="field-box">

                <p>Création d'un critère de performance</p>
                <hr />

                <div class="form-group">
                    @Html.TextAreaFor(m => m.description, new { @rows = "3", @maxlength = "300", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-danger" })
                </div>

                <input type="submit" value="Ajouter" class="fancy-button" />

            </div>

            @Html.Action("_PartialList")

            <hr />
            <a href='@Url.Action("Info", "ElementCompetence", new { idElement = Model.idElement })' class="fancy-button">Terminer</a>

        </div>
    </div>
}