@model ApplicationPlanCadre.Models.Programme

@{
    ViewBag.Titre = "Ajout d'un programme";
}

@using (Html.BeginForm("Creation", "ConsoleProgramme", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Titre</h1>

            </header>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="field-box">
                <div class="row">
                    <div class="col-md-8">

                        @Html.ValidationMessage("Duplique", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.idDevis)
                            @Html.DropDownList("idDevis", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idDevis, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.nom)
                            @Html.TextBoxFor(model => model.nom, new { @class = "form-control", @maxlength = 50 })
                            @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                        </div>

                        <div class=" form-group">
                            @Html.LabelFor(model => model.annee)
                            @Html.TextBoxFor(model => model.annee, new { @class = "form-control small", @maxlength = 4 })
                            @Html.ValidationMessageFor(model => model.annee, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.nbSession)
                            @Html.TextBoxFor(model => model.nbSession, new { @class = "form-control small", @maxlength = 1 })
                            @Html.ValidationMessageFor(model => model.nbSession, "", new { @class = "text-danger" })
                        </div>

                        <input type="submit" value="Ajouter" class="fancy-button" />
                        <a class="fancy-button rouge" onclick="location.href='@Url.Action("Index")'">Annuler</a>


                    </div>
                </div>
            </div>

            <hr />


        </div>
    </div>
}
