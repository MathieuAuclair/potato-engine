@using SysInternshipManagement.Views.Shared.Widget.Model
@model IEnumerable<SysInternshipManagement.Models.Location>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Location</h1>
   
    <div style="margin-top: 15px; margin-bottom: 15px;">
        <form  action="/Location/Creation" method="post">
            @Html.Partial("Widget/_FlatUiButton", new FlatUiButton("Ajouter une nouvelle location"))
        </form>
    </div>
    <div class="row">
        <div class="col-md-10">
            <table class="cool-table">
                <tr>
                    <th colspan="6">Location</th>
                    <th colspan="1" class="action-cell-header">Modifier</th>
                    <th colspan="1" class="action-cell-header">Supprimer</th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td colspan="6">
                        @Html.DisplayFor(model => item.Nom)
                    </td>
                    <td colspan="1" class="action-cell">

                        <a href='@Url.Action("Edition", "Location", new { id = item.IdLocation })'>
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td colspan="1" class="action-cell">
                            <a href='@Url.Action("Suppression", "Location", new { id = item.IdLocation })'>
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>