@model IEnumerable<SysInternshipManagement.Models.Application>
@using SysInternshipManagement.Views.Shared.Widget.Model

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <h2>Applications aux stages</h2>

    <input class="fancy-button" type="button" value="Appliquer à un stage" onclick="location.href = '@Url.Action("Creation", "Application")'" />
    <div class="row">
        <div class="col-md-11">
            <table class="cool-table">
                <tr>
                    <th colspan="2">Nom de l'étudiant</th>
                    <th colspan="2" >Code permanent</th>
                    <th colspan="3" >Description du stage</th>
                    <th colspan="1" class="action-cell-header">Modifier</th>
                    <th colspan="1" class="action-cell-header">Supprimer</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etudiant.NomComplet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etudiant.CodePermanent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stage.Description)
                    </td>
                   
                    <td colspan="1" class="action-cell">

                        <a href='@Url.Action("Edition", "Application", new { id = item.IdApplication })'>
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td colspan="1" class="action-cell">
                        <a href='@Url.Action("Suppression", "Application", new { id = item.IdApplication })'>
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                </tr>

                }
            </table>
        </div>
    </div>
</div>