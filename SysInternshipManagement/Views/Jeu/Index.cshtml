@model IEnumerable<ApplicationPlanCadre.Models.eSports.Jeu>

@{
    ViewBag.Titre = "Jeux";
}

<div class="container" style="margin-bottom:5%;">
    <div class="box">

    <header class="light-header">
        <h1>Liste des jeux</h1>
    </header>


    <table class="cool-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomJeu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.abreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatutId)
            </th>
            <th class="action-cell-header">
                <b>Modifier</b>
            </th>
            <th class="action-cell-header">
                <b>Détails</b>
            </th>
            <th class="action-cell-header">
                <b>Suppression</b>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomJeu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.abreviation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut.nomStatut)
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Modifier", new { id = item.id, nomJeu = item.nomJeu })'>
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Details", new { id = item.id, nomJeu = item.nomJeu })'>
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>
                </td>
                <td class="action-cell">
                    @if (item.Statut.nomStatut == "Inactif")
                    {
                        <a href='@Url.Action("Supprimer", new { id = item.id, nomJeu = item.nomJeu })'>
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    }
                </td>
            </tr>
        }

    </table>


    <div class="menu-flottant">
        <a class="fancy-button blanc" href="/Accueil/ESport">
            <span class="glyphicon glyphicon-triangle-left"></span>
            Retour
        </a>
        <a class="fancy-button blanc" href="@Url.Action("Creation", "Jeu")">
            <span class="glyphicon glyphicon-plus"></span>
            Ajouter un jeu
        </a>
    </div>

   </div>
</div>